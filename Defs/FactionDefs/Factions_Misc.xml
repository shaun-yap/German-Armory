    <backstoryFilters>
      <li>
        <categories>
          <li>Outlander</li> <!-- To do -->
        </categories>
        <commonality>0.95</commonality>
      </li>
      <li>
        <categories>
          <li>Offworld</li> <!-- To do -->
        </categories>
        <commonality>0.05</commonality>
      </li>
    </backstoryFilters>
    <geneticVariance>0.8</geneticVariance>
    <hairTags>
      <li>Rural</li> <!-- To do -->
    </hairTags>
    <caravanTraderKinds><!-- To do -->
